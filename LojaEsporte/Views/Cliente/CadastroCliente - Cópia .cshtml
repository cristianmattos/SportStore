@model LojaEsporte.Models.Cliente
@{
    ViewBag.Title = "CadastroCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Adicionando Javascript -->
<script src="~/Scripts/valida-cep.js"></script>


@using (Html.BeginForm("ListaCliente", "Cliente", FormMethod.Post))
{

    <form action="" method="POST">
        <h2>Cadastro do Cliente</h2>

        <h3>Dados Pessoais</h3>

        @Html.ValidationSummary(true)

        <div class="form-row">
            <div class="form-group">
                <label for="name">Nome Completo</label>
                @*<input type="text" name="name" required="required" placeholder="Nome">*@
                @Html.EditorFor(x => x.Nome, new { htmlAttributes = new { @placeholder = "Nome", @required = "required" } })
                @Html.ValidationMessageFor(x => x.Nome)
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                @*<input type="email" name="email" required="required" placeholder="Email">*@
                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @placeholder = "Email", @required = "required" } })
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div class="form-group">
                <label for="CPF">CPF</label>
                @*<input type="number" name="CPF" required="required" placeholder="CPF">*@
                @Html.EditorFor(x => x.Cpf, new { htmlAttributes = new { @placeholder = "CPF", @required = "required" } })
                @Html.ValidationMessageFor(x => x.Cpf)
            </div>
            <div class="form-group">
                <label for="date">Data de Nascimento</label>
                @*<input type="date" name="date" required="required" placeholder="__/__/____">*@
                @Html.EditorFor(x => x.Nasc, new { htmlAttributes = new { @placeholder = "__/__/____", @required = "required" } })
                @Html.ValidationMessageFor(x => x.Nasc)
            </div>
            <div class="form-group">
                <label for="Phone">Telefone</label>
                @*<input type="number" name="Phone" required="required" placeholder="(  )_____-____">*@
                @Html.EditorFor(x => x.Telefone, new { htmlAttributes = new { @placeholder = "(  )_____-____", @required = "required" } })
                @Html.ValidationMessageFor(x => x.Telefone)
            </div>
        </div>


        <div class="form-row">
            <div class="form-group">
                <label for="address">Cep:</label>
                @*<input type="text" name="address" id="cep" value="" size="10" maxlength="9" onblur="pesquisacep(this.value);" required="required" placeholder="_____-___">*@
                @Html.EditorFor(x => x.Cep, new { htmlAttributes = new { @id = "cep", @onblur = "pesquisacep(this.value);", @maxlength = "9", @placeholder = "_____-___", @required = "required" } })
                @Html.ValidationMessageFor(x => x.Cep)
            </div>
            <div class="form-group">
                <label for="address1">Rua:</label>
                @*<input type="text" name="address1" id="rua" size="60" required="required">*@
                @Html.EditorFor(x => x.Rua, new { htmlAttributes = new { @id = "rua", @required = "required" } })
                @Html.ValidationMessageFor(x => x.Rua)
            </div>
            <div class="form-group">
                <label for="address2">Número:</label>
                @*<input type="text" name="address2" required="required">*@
                @Html.EditorFor(x => x.Numero, new { htmlAttributes = new { @id = "numero", @required = "required" } })
                @Html.ValidationMessageFor(x => x.Numero)
            </div>
            <div class="form-group">
                <label for="address3">Complemento:</label>
                @*<input type="text" name="address3" required="required" placeholder="Casa/Apto">*@
                @Html.EditorFor(x => x.Complemento, new { htmlAttributes = new { @id = "complemento", @placeholder = "Casa/Apto" } })
                @Html.ValidationMessageFor(x => x.Complemento)
            </div>
            <div class="form-group">
                <label for="address4">Bairro:</label>
                @*<input type="text" name="address4" id="bairro" size="40" required="required">*@
                @Html.EditorFor(x => x.Bairro, new { htmlAttributes = new { @id = "bairro", @size = "40", @required = "required" } })
                @Html.ValidationMessageFor(x => x.Bairro)
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="city">Cidade:</label>
                @*<input type="text" name="city" id="cidade" size="40" required="required">*@
                @Html.EditorFor(x => x.Cidade, new { htmlAttributes = new { @id = "cidade", @size = "40", @required = "required" } })
                @Html.ValidationMessageFor(x => x.Cidade)
            </div>
            <div class="form-group">
                <label for="state">Estado:</label>
                @*<input type="text" name="state" id="uf" size="2" required="required">*@
                @Html.EditorFor(x => x.Estado, new { htmlAttributes = new { @id = "uf", @size = "2", @required = "required" } })
                @Html.ValidationMessageFor(x => x.Estado)
            </div>
        </div>

        <button type="submit" class="btn btn-primary">EFETUAR CADASTRO</button>
    </form>
}

@section Scripts {@Scripts.Render("~/bundles/jqueryval") }