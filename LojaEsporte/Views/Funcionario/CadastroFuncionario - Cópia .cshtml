        <h2>Cadastro do Funcionário</h2>


        <h3>Dados Pessoais</h3>

        @Html.ValidationSummary(true)

        <div class="form-row">
            <div class="form-group">
                <label for="name">Nome Completo</label>
                @*<input type="text" name="name" required="required" placeholder="Nome">*@
                @Html.EditorFor(x => x.Nome, new { htmlAttributes = new { @placeholder = "Nome", @required = "required" } })
                @Html.ValidationMessageFor(x => x.Nome)
            </div>
            <div class="form-group">
                <label for="CPF">CPF</label>
                @*<input type="number" name="CPF" required="required" placeholder="CPF">*@
                @Html.EditorFor(x => x.Cpf, new { htmlAttributes = new { @placeholder = "CPF", @required = "required" } })
                @Html.ValidationMessageFor(x => x.Cpf)
            </div>
        </div>

