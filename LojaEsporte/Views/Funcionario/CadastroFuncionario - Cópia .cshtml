@model LojaEsporte.Models.Funcionario
@{
    ViewBag.Title = "CadastroFuncionario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Adicionando Javascript -->
<script src="~/Scripts/valida-cep.js"></script>

@using (Html.BeginForm("Resultado", "Home", FormMethod.Post))
{
